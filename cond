. include/conf.sh
conf_init

mkill() {
	PIDLIST="$(ps -ef | awk -F "PPID=${1}" '$3 == PPID { print $2 }')"
	echo "${1}"
	echo "${PIDLIST}"
	if [ "${PIDLIST}" != "" ] ; then
		for pid in ${PIDLIST}
		do
			kill -9 "${pid}"
		done
	fi
}

PIDLIST="$(for WORKINGSERVERS in `grep ^S ${STRIPCONF}`
do
	SERVER="$(echo ${WORKINGSERVERS} | cut -d : -f 2)"
	FLAGS="$(echo ${WORKINGSERVERS} | cut -d : -f 5)"
	case "${FLAGS}" in
		*n*)
			echo "" >/dev/null
		;;
		*)
			ossh "${SERVER}" "${NETSHORTNAME}-data/scripts/run.sh ping" >/dev/null </dev/null 2>/dev/null &
			PID=$!
			echo "${SERVER}:${PID}"
		;;
	esac
done)"

if [ "${PIDLIST}" != "" ] ; then
	for pid in ${PIDLIST}
	do
		SERVERNAME="$(echo ${pid} | cut -d : -f 1)"
		PID="$(echo ${pid} | cut -d : -f 2)"
		echo "${SERVERNAME}"
		if [ "${PID}" != "" ] ; then
			echo "${PID}"
			mkill "${PID}"
		fi
	done
fi
rm -r ${OUTPUTPATH}
